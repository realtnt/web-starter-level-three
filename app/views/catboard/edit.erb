<h1>Edit Cat Ad</h1>

<form action="/catboard/<%= cat_ad.id %>" method="POST">
  <%#
    This hidden input is necessary for Sinatrato recognise
    this as a PATCH request.
  %>
  <input type="hidden" name="_method" value="PATCH">

  <p>
    <label for="title">Title</label>
    <br>
    <input type="text" id="title" name="title" value="<%= cat_ad.title %>">
    <br>
    <label for="description">Description</label>
    <br>
    <input type="description" id="description" name="description" value="<%= cat_ad.description %>">
    <br>
    <label for="image_url">Image URL</label>
    <br>
    <input type="text" id="image_url" name="image_url" value="<%= cat_ad.image_url %>">
  </p>

  <input type="submit" value="Update Cat Ad">
</form>
